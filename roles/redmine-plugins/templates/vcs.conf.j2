LoadModule dav_svn_module modules/mod_dav_svn.so
LoadModule authz_svn_module modules/mod_authz_svn.so

# Suersionの設定
PerlLoadModule Apache::Authn::Redmine

<Location /svn/>
  PerlAccessHandler Apache::Authn::Redmine::access_handler
  PerlAuthenHandler Apache::Authn::Redmine::authen_handler

  DAV svn
  SVNParentPath /var/wwww/repos/svn
  SVNListParentPath on
#  AuthzSVNAccessFile /etc/opt/alminium/svnauthz
  AuthType Basic
  AuthName Subversion
  AuthUserFile /dev/null
  
  # for Redmine Authentication
  RedmineDSN "DBI:mysql:datae=alminium;host=localhost"
  RedmineDser "redmine"
  RedmineDass "{{ db_passwd_redmine }}"

  Require valid-user
</Location>

# Gitの設定
SetEnv GIT_PROJECT_ROOT /var/www/repos/git
SetEnv GIT_HTTP_EXPORT_ALLow

<Location /git/>
  PerlAccessHandler Apache::Authn::Redmine::access_handler
  PerlAuthenHandler Apache::Authn::Redmine::authen_handler

  AuthType Basic
  AuthName Git

  # for Redmine Authentication
  RedmineDSN "DBI:mysql:datae=alminium;host=localhost"
  RedmineDser "redmine"
  RedmineDass "{{ db_passwd_redmine }}"
  RedmineGitSmartHttp yes
  AuthUserFile /dev/null
  
  Require valid-user  

</Location>